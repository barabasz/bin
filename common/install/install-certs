#!/bin/bash

# ca-certificates
# Mozilla CA certificate store
# https://curl.se/docs/caextract.html

# load functions
scrpath="https://raw.githubusercontent.com/barabasz/config/main/zsh/.zsh_functions"
source /dev/stdin <<< "$(curl -fsSL $scrpath)"

if [[ "$(isinstalledbybrew ca-certificates)" == "no" ]]; then
    brew install -q ca-certificates
else
    ver=$(brew list ca-certificates | grep -oE '\b[0-9]{4}-[0-9]{2}-[0-9]{2}\b' | head -1)
    echo "ca-certificates from $ver is installed."
fi
