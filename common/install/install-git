#!/bin/bash

# load functions
zshpath=https://raw.githubusercontent.com/barabasz/config/main/zsh/
source /dev/stdin <<< "$(curl -fsSL $zshpath/.zsh_functions)"

if [[ "$(isinstalled git)" == "no" ]]; then
    if [[ "$(osname)" == "macos" ]]; then
        xcode-select --install
    else
        aptinstall git
    fi
else
    git --version
fi
