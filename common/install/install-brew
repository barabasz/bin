#!/bin/bash

# load functions
test -f ~/.zshenv && source "$_"
if [ -z "${ZDOTDIR}" ]; then
    source $ZDOTDIR/.zsh_functions
else
    f="https://raw.githubusercontent.com/barabasz/resources/main/install.sh"
    source /dev/stdin <<< "$(curl -fsSL $f)"
fi

export HOMEBREW_NO_ENV_HINTS=1
export HOMEBREW_NO_EMOJI=1
export NONINTERACTIVE=1

if [[ "$(isinstalled brew)" == "no" ]]; then
    # Ubuntu/Debian fix
    if [[ "$(osname)" != "macos" ]]; then
        sudo mkdir -p /home/linuxbrew/
        sudo chmod 755 /home/linuxbrew/
    fi

    # Brew (unattended installation)
    b="https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh"
    /bin/bash -c "$(curl -fsSL $b)"

    # Execute shellenv
    if [[ -f /opt/homebrew/bin/brew ]]; then
        eval "$(/opt/homebrew/bin/brew shellenv)"
    elif [[ -f /home/linuxbrew/.linuxbrew/bin/brew ]]; then
        eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
    fi

    # Disable analytics
    brew analytics off
else
    brew --version
fi




