#!/bin/bash

# load functions
source ~/.zsh_functions
source ~/.zsh_locale

if [[ "$(isinstalled brew)" == "no" ]]; then
    # Debian fix
    if [[ "$(osname)" == "debian" ]]; then
        sudo mkdir -p /home/linuxbrew/
        sudo chmod 755 /home/linuxbrew/
    fi

    # Brew (unattended installation)
    NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

    # Execute shellenv
    if [[ -f /opt/homebrew/bin/brew ]]; then
        eval "$(/opt/homebrew/bin/brew shellenv)"
    elif [[ -f /home/linuxbrew/.linuxbrew/bin/brew ]]; then
        eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
    fi

    mkdir -p $HOMEBREW_PREFIX/etc/homebrew
    ln -sf ~/GitHub/config/brew/brew.env $HOMEBREW_PREFIX/etc/homebrew/brew.env
    source $HOMEBREW_PREFIX/etc/homebrew/brew.env

    # Disable analytics
    brew analytics off

    # Install essentials
    brew install -q ca-certificates gettext krb5 libvterm luajit msgpack ncurses tree-sitter fzf icu4c libtermkey libuv luv readline unibilium
    if [[ "$(osname)" != "macos" ]]; then
        brew install -q zlib libedit libxml2 libtirpc libnsl
    fi

else
    brew --version
fi




