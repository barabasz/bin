#!/bin/bash

# load functions
scrpath="https://raw.githubusercontent.com/barabasz/resources/main/install.sh"
source /dev/stdin <<< "$(curl -fsSL $scrpath)"

# Common scripts
ln -sF $GHBINDIR/common $HOME/bin

# OS-specific scripts
if [[ "$(osname)" == "macos" ]]; then
    ln -sF $GHBINDIR/macos $HOME/binos
else
    ln -sF $GHBINDIR/linux $HOME/binos
fi

# Library
ln -sF $GHBINDIR/lib $HOME/lib
