#!/bin/bash

# load functions
zshpath=https://raw.githubusercontent.com/barabasz/resources/refs/heads/main/zsh
source /dev/stdin <<< "$(curl -fsSL $zshpath/.zshenv)"
source /dev/stdin <<< "$(curl -fsSL $zshpath/.zsh_functions)"

# Common scripts
ln -sf $GHBINDIR/common $HOME/bin

# OS-specific scripts
if [[ "$(osname)" == "macos" ]]; then
    ln -sf $GHBINDIR/macos $HOME/binmac
else
    ln -sf $GHBINDIR/linux $HOME/binlinux
fi

# Library
ln -sF $GHBINDIR/lib $HOME/lib

# ZSH
ln -sF $GHCONFDIR/zsh $CONFDIR/zsh