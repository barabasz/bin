#!/bin/zsh

# load variables and functions
source $ZDOTDIR/.zsh_load

echo "ğŸ–¥ï¸ ğŸ‘‰ â˜ï¸ ${redb}Pushing all repositories to the remote.${reset}"

for repo in $(git-repos)
do
