#!/bin/zsh

# load variables and functions
zshload="$ZDOTDIR/.zsh_load"; pref="‚ùå \e[1;91m"; suff="\e[0m"
loaderr="${pref}Error loading $zshload: file not found.${suff}"
[[ -f $zshload ]] && source $zshload || { echo $loaderr; return 1; }

echo "${redb}Pulling all repositories from the remote.${reset}"

for repo in $(git-repos)
do
    printhead $(basename $repo)
    cd $repo
    echo "${cyan}$(git remote get-url origin)${reset}"
    git pull --rebase
done

