#!/bin/bash

envopt="NEEDRESTART_MODE=a DEBIAN_FRONTEND=noninteractive"
aptopt="-qq"

echo "Installing essential packages..."

# Certs & security
sudo $envopt apt-get install $aptopt openssh-server gnupg2 ca-certificates acl > /dev/null

# Software info
sudo $envopt apt-get install $aptopt lsb-release software-properties-common > /dev/null

# Basic tools
sudo $envopt apt-get install $aptopt net-tools apt-transport-https > /dev/null

# Basic languages
sudo $envopt apt-get install $aptopt build-essential cmake ninja-build > /dev/null
