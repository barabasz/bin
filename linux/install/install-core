#!/bin/bash

github="https://raw.githubusercontent.com/barabasz/bin/main/linux/install"

# load functions
source /dev/stdin <<< "$(curl -fsSL $github/load-functions)"

# Update and upgrade
printhead 'Updating system...'
gitscript $github/install-updates

# Git, gh
printhead 'Installing git...'
gitscript $github/install-git

# clone setup repositories
printhead 'Cloning setup repositories...'
gitscript $github/install-repos

# set temporary path
gitsource $github/install-path

# set locale
printhead 'Setting locale...'
set-locale

# minimize login info
printhead 'Minimizing login info...'
fix-login-info

# remove snap
printhead 'Removing snap...'
remove-snap

# zsh
printhead 'Installing zsh...'
install-zsh

# omz
printhead 'Installing oh-my-zsh...'
install-omz
